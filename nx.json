{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cacheDirectory": ".cache/nx",
  "cli": {
    "packageManager": "pnpm"
  },
  "defaultBase": "main",
  "generators": {
    "@nx/next": {
      "application": {
        "appDir": false,
        "e2eTestRunner": "none",
        "linter": "eslint",
        "src": true,
        "style": "css",
        "unitTestRunner": "none"
      }
    }
  },
  "namedInputs": {
    "default": ["sharedGlobals", "{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/stylelint.config.mjs"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.browserslistrc",
      "{workspaceRoot}/.editorconfig",
      "{workspaceRoot}/.prettierignore",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/pnpm-workspace.yaml",
      "{workspaceRoot}/prettier.config.mjs"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "buildDepsTargetName": "build-deps",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "serveStaticTargetName": "serve-static",
        "startTargetName": "start",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "targetDefaults": {
    "dev": {
      "options": {
        "env": {
          "NEXT_PRIVATE_LOCAL_WEBPACK": "true"
        }
      }
    },
    "lint:styles": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/stylelint.config.mjs",
        "{projectRoot}/stylelint.config.mjs",
        {
          "externalDependencies": ["stylelint"]
        }
      ],
      "options": {
        "command": "stylelint \"**/*.css\"",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/*.d.ts",
        "{projectRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.base.json",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    }
  }
}
