{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cacheDirectory": ".cache/nx",
  "cli": {
    "packageManager": "pnpm"
  },
  "defaultBase": "main",
  "generators": {
    "@nx/next": {
      "application": {
        "appDir": false,
        "e2eTestRunner": "none",
        "linter": "eslint",
        "src": true,
        "style": "css",
        "unitTestRunner": "none"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/**/*.spec.{js,jsx,ts,tsx}",
      "!{projectRoot}/**/*.test.{js,jsx,ts,tsx}",
      "!{projectRoot}/.prettierignore",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/prettier.config.mjs",
      "!{projectRoot}/stylelint.config.mjs",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/vitest.base.mjs",
      "!{projectRoot}/vitest.setup.mjs"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.browserslistrc",
      "{workspaceRoot}/.editorconfig",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/pnpm-workspace.yaml"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "dev",
        "startTargetName": "start"
      }
    },
    {
      "plugin": "@nx/vitest",
      "options": {
        "testTargetName": "test"
      }
    }
  ],
  "targetDefaults": {
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/eslint.config.mjs",
        "{workspaceRoot}/.prettierignore",
        "{workspaceRoot}/eslint.config.mjs",
        "{workspaceRoot}/prettier.config.mjs"
      ]
    },
    "stylelint": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/stylelint.config.mjs",
        "{workspaceRoot}/postcss.config.mjs",
        "{workspaceRoot}/prettier.config.mjs",
        "{workspaceRoot}/stylelint.config.mjs",
        {
          "externalDependencies": ["stylelint"]
        }
      ],
      "options": {
        "command": "stylelint \"**/*.css\"",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/vitest.config.mjs",
        "{workspaceRoot}/vitest.base.mjs",
        "{workspaceRoot}/vitest.setup.mjs",
        "{workspaceRoot}/vitest.workspace.mjs"
      ],
      "options": {
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/*.d.ts",
        "{projectRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.base.json",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    }
  }
}
